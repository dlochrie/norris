doctype html
html(lang='en', ng-app='norris')
  head
    title= title
    base(href='/')
    link(rel='stylesheet',
        href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='javascripts/third-party/angular/angular.min.js')
    script(src='javascripts/third-party/ui-router/angular-ui-router.min.js')
    script(src='/javascripts/application.js')
  body

    nav.navbar.navbar-fixed-top.navbar-default(role='navigation', id='top-nav')
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar',
              aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar

          a.navbar-brand(href='#/') Norris

        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li(ui-sref-active="active")
              a(ui-sref='home') Home
            li(ui-sref-active="active")
              a(ui-sref='cats') Cats!
            li(ui-sref-active="active")
              a(ui-sref='posts') Posts
            li(ui-sref-active="active")
              a(ui-sref='guestbook') Guest Book

    .container
      .page-header
        h1= title || 'Norris'
          small.pull-right Angular + Closure + Bootstrap on Express

      .row
        .col-md-3
          include common/sidebar

        .col-md-9
          block content

      footer.footer
        | &copy; Norris Enterpises 2014
